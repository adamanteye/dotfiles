auto-reload yes
reload-threads 100
browser "firefox %u"
datetime-format "%Y-%m-%d"

# bind keys - vim style
# https://forums.freebsd.org/threads/newsboat-rss-reader-enable-vim-key-bindings.69448/
unbind-key ENTER
unbind-key j
unbind-key k
unbind-key J
unbind-key K
bind-key j down
bind-key k up
bind-key l open
bind-key h quit

# delete dangling urls
cleanup-on-quit yes

# killfiles
ignore-article "https://rustcc.cn/rss" "title !~ \"【Rust日报】\""
